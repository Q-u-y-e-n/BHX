@model BHX_Web.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Thanh Toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-7">
            <h4 class="mb-3 text-success fw-bold"><i class="fa-solid fa-location-dot"></i> Thông tin giao hàng</h4>
            <form asp-action="ProcessCheckout" method="post">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ tên người nhận</label>
                            <input asp-for="TenNguoiNhan" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Số điện thoại</label>
                            <input asp-for="SoDienThoai" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Địa chỉ nhận hàng</label>
                            <textarea asp-for="DiaChi" class="form-control" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ghi chú</label>
                            <textarea asp-for="GhiChu" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success w-100 py-3 fw-bold text-uppercase shadow">
                    XÁC NHẬN ĐẶT HÀNG (COD)
                </button>
            </form>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-header bg-white fw-bold py-3">Đơn hàng của bạn</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush bg-transparent">
                        @if (Model.CartItems != null)
                        {
                            foreach (var item in Model.CartItems)
                            {
                                <li
                                    class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0">
                                    <span>@item.TenSanPham <small class="text-muted">x @item.SoLuong</small></span>
                                    <strong>@string.Format("{0:N0}₫", item.ThanhTien)</strong>
                                </li>
                            }
                        }
                    </ul>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span class="h5 fw-bold">Tổng cộng</span>
                        <span class="h4 fw-bold text-danger">@string.Format("{0:N0}₫", Model.TongTien)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>