@model IEnumerable<BHX_Web.Models.Entities.SanPham>
@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="fa-solid fa-search"></i></span>
                        <input type="text" name="searchString" class="form-control"
                            placeholder="Tìm kiếm sản phẩm bạn cần..." value="@Context.Request.Query["searchString"]">
                    </div>
                </div>
                <div class="col-md-2">
                    <select class="form-select">
                        <option>Giá: Thấp đến Cao</option>
                        <option>Giá: Cao đến Thấp</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100">Tìm Kiếm</button>
                </div>
            </form>
        </div>
    </div>

    <h4 class="text-success fw-bold mb-3">Tất Cả Sản Phẩm (@Model.Count())</h4>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">Không tìm thấy sản phẩm nào phù hợp.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm product-card">
                        <img src="@(item.HinhAnh ?? "/images/no-image.png")" class="card-img-top p-3"
                            style="height: 200px; object-fit: contain;" onerror="this.src='/images/no-image.png'">
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title fw-bold">@item.TenSanPham</h6>
                            <div class="mt-auto">
                                <span class="text-danger fw-bold fs-5">@string.Format("{0:N0}₫", item.GiaBan)</span>
                                <span class="text-muted small">/@item.DonViTinh</span>
                                <a asp-controller="GioHang" asp-action="AddToCart" asp-route-id="@item.SanPhamID"
                                    class="btn btn-outline-success w-100 mt-2 fw-bold">
                                    Thêm vào giỏ
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>