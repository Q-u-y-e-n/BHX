@model IEnumerable<BHX_Web.Models.Entities.SanPham>
@{
    ViewData["Title"] = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="heroCarousel" class="carousel slide mb-5 shadow-sm rounded overflow-hidden" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://cdn.tgdd.vn/2022/08/banner/1920x600-1920x600-4.jpg" class="d-block w-100"
                style="height: 400px; object-fit: cover;" alt="Banner 1">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                <h3>Thực Phẩm Tươi Ngon Mỗi Ngày</h3>
                <p>Cam kết chất lượng - Giao hàng siêu tốc.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://cdn.tgdd.vn/2022/07/banner/1920x600-1920x600-3.jpg" class="d-block w-100"
                style="height: 400px; object-fit: cover;" alt="Banner 2">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<div class="container mb-5">
    <h4 class="text-success fw-bold border-bottom pb-2 mb-4">DANH MỤC NỔI BẬT</h4>
    <div class="row text-center">

        <div class="col-md-2 col-4 mb-3">
            <a asp-controller="SanPham" asp-action="Index" asp-route-category="Thực phẩm tươi"
                class="text-decoration-none text-dark">
                <div class="p-3 border rounded bg-light h-100 hover-shadow">
                    <i class="fa-solid fa-carrot fa-2x text-warning mb-2"></i><br>Thực Phẩm Tươi
                </div>
            </a>
        </div>

        <div class="col-md-2 col-4 mb-3">
            <a asp-controller="SanPham" asp-action="Index" asp-route-category="Thực phẩm tươi"
                class="text-decoration-none text-dark">
                <div class="p-3 border rounded bg-light h-100 hover-shadow">
                    <i class="fa-solid fa-drumstick-bite fa-2x text-danger mb-2"></i><br>Thịt - Cá
                </div>
            </a>
        </div>

        <div class="col-md-2 col-4 mb-3">
            <a asp-controller="SanPham" asp-action="Index" asp-route-category="Đồ ăn liền"
                class="text-decoration-none text-dark">
                <div class="p-3 border rounded bg-light h-100 hover-shadow">
                    <i class="fa-solid fa-bowl-rice fa-2x text-primary mb-2"></i><br>Mì - Đồ Liền
                </div>
            </a>
        </div>

        <div class="col-md-2 col-4 mb-3">
            <a asp-controller="SanPham" asp-action="Index" asp-route-category="Đồ uống"
                class="text-decoration-none text-dark">
                <div class="p-3 border rounded bg-light h-100 hover-shadow">
                    <i class="fa-solid fa-bottle-water fa-2x text-info mb-2"></i><br>Đồ Uống - Sữa
                </div>
            </a>
        </div>

        <div class="col-md-2 col-4 mb-3">
            <a asp-controller="SanPham" asp-action="Index" asp-route-category="Bánh kẹo"
                class="text-decoration-none text-dark">
                <div class="p-3 border rounded bg-light h-100 hover-shadow">
                    <i class="fa-solid fa-cookie-bite fa-2x text-warning mb-2"></i><br>Bánh Kẹo
                </div>
            </a>
        </div>

        <div class="col-md-2 col-4 mb-3">
            <a asp-controller="SanPham" asp-action="Index" asp-route-category="Hóa mỹ phẩm"
                class="text-decoration-none text-dark">
                <div class="p-3 border rounded bg-light h-100 hover-shadow">
                    <i class="fa-solid fa-pump-soap fa-2x text-success mb-2"></i><br>Hóa Phẩm
                </div>
            </a>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4">
        <h4 class="text-success fw-bold mb-0">SẢN PHẨM MỚI</h4>
        <a asp-controller="SanPham" asp-action="Index" class="btn btn-sm btn-outline-success">Xem tất cả <i
                class="fa-solid fa-arrow-right"></i></a>
    </div>

    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm product-card">
                    <div class="position-relative">
                        <img src="@(item.HinhAnh ?? "/images/no-image.png")" class="card-img-top p-3"
                            style="height: 200px; object-fit: contain;" alt="@item.TenSanPham"
                            onerror="this.src='/images/no-image.png'">
                        <span class="badge bg-danger position-absolute top-0 start-0 m-2">-10%</span>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title fw-bold text-dark">@item.TenSanPham</h6>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-danger fw-bold fs-5">@string.Format("{0:N0}₫", item.GiaBan)</span>
                                <small class="text-muted text-decoration-line-through">@string.Format("{0:N0}₫", item.GiaBan
                                                                    * 1.1m)</small>
                        </div>
                        <div class="text-muted small mb-2">ĐVT: @item.DonViTinh</div>

                            <a asp-controller="GioHang" asp-action="AddToCart" asp-route-id="@item.SanPhamID"
                                class="btn btn-success w-100 fw-bold">
                                <i class="fa-solid fa-cart-shopping"></i> Chọn Mua
                            </a>
                        </div>
                    </div>
                </div>
            </div>
                }
    </div>
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
        cursor: pointer;
        border-color: #008848 !important;
    }

    .product-card {
        transition: transform 0.3s;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }
</style>