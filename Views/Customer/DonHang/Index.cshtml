@model IEnumerable<BHX_Web.Models.Entities.DonHang>

@{
    ViewData["Title"] = "Đơn Hàng Của Tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h3 class="text-success fw-bold mb-4"><i class="fa-solid fa-receipt"></i> Lịch Sử Đơn Hàng</h3>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Mã Đơn</th>
                            <th>Ngày Đặt</th>
                            <th>Tổng Tiền (Ước tính)</th>
                            <th>Trạng Thái</th>
                            <th class="text-end pe-4">Chi Tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">#@item.DonHangID</td>
                                    <td>@item.NgayDat.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="fw-bold">
                                        Xem chi tiết
                                    </td>
                                    <td>
                                        @if (item.TrangThai == "Chờ xác nhận")
                                        {
                                            <span class="badge bg-warning text-dark">Mới đặt</span>
                                        }
                                        else if (item.TrangThai == "Hoàn thành")
                                        {
                                            <span class="badge bg-success">Giao thành công</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-dark">@item.TrangThai</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Details" asp-route-id="@item.DonHangID"
                                            class="btn btn-sm btn-outline-success">
                                            Xem <i class="fa-solid fa-chevron-right"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="fa-solid fa-box-open fa-3x mb-3 opacity-50"></i><br />
                                    Bạn chưa có đơn hàng nào. <a asp-controller="Home" asp-action="Index">Mua sắm ngay!</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>