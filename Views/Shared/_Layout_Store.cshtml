@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cửa Hàng BHX</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-success border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Store" asp-controller="Home" asp-action="Index">BHX - CỬA HÀNG</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Store" asp-controller="HoaDon"
                                asp-action="Create">Bán Hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Store" asp-controller="KhoCuaHang"
                                asp-action="Index">QL Kho</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Store" asp-controller="NhanHang"
                                asp-action="Index">Nhận Hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Store" asp-controller="DeXuatNhap"
                                asp-action="Index">Đề Xuất Nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Store" asp-controller="TraHang"
                                asp-action="Index">Trả Hàng</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light">Xin chào, @User.Claims.FirstOrDefault(c => c.Type ==
                                                                    "FullName")?.Value</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-area="" asp-controller="Account"
                                asp-action="Logout">Đăng xuất</a>
                        </li>
                                                }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BHX_Web - Store
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>