@using System.Security.Claims
@using BHX_Web.Helpers
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bách Hóa Xanh Online</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Custom Style cho Layout */
        .navbar-brand {
            font-weight: 800;
            letter-spacing: 1px;
        }

        .nav-link {
            font-weight: 500;
        }

        .nav-link:hover {
            color: #008848 !important;
        }

        .cart-badge {
            font-size: 0.75rem;
            position: absolute;
            top: 5px;
            right: -5px;
        }

        footer a {
            text-decoration: none;
            color: #6c757d;
        }

        footer a:hover {
            color: #008848;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand text-success d-flex align-items-center" asp-area="Customer" asp-controller="Home"
                    asp-action="Index">
                    <i class="fa-solid fa-leaf me-2"></i> BÁCH HÓA XANH
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                    aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home"
                                asp-action="Index">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="SanPham"
                                asp-action="Index">Sản Phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home"
                                asp-action="About">Về Chúng Tôi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home"
                                asp-action="Contact">Liên Hệ</a>
                        </li>
                    </ul>

                    <form class="d-flex me-3" asp-area="Customer" asp-controller="SanPham" asp-action="Index"
                        method="get">
                        <div class="input-group">
                            <input class="form-control border-success" type="search" name="searchString"
                                placeholder="Tìm sản phẩm..." aria-label="Search">
                            <button class="btn btn-outline-success" type="submit"><i
                                    class="fa-solid fa-magnifying-glass"></i></button>
                        </div>
                    </form>

                    <ul class="navbar-nav align-items-center">

                        <li class="nav-item me-3 position-relative">
                            <a class="nav-link text-success fs-5" asp-area="Customer" asp-controller="GioHang"
                                asp-action="Index">
                                <i class="fa-solid fa-cart-shopping"></i>
                                @{
                                    // Lấy session giỏ hàng (nếu có helper)
                                    // var cart = Context.Session.Get<List<GioHangItem>>("Online_Cart");
                                    // var count = cart?.Sum(x => x.SoLuong) ?? 0;
                                    // <span class="badge bg-danger rounded-pill cart-badge">@count</span>
                                }
                            </a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var fullName = User.FindFirst(ClaimTypes.GivenName)?.Value ?? User.Identity.Name;
                            var role = User.FindFirst(ClaimTypes.Role)?.Value;

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark fw-bold" href="#" id="userDropdown"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-circle-user me-1 text-secondary"></i> @fullName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">

                                    @if (role == "Admin" || role == "Tổng Công Ty")
                                    {
                                        <li>
                                            <a class="dropdown-item text-primary fw-bold" asp-area="Admin" asp-controller="Home"
                                                asp-action="Index">
                                                <i class="fa-solid fa-gauge-high"></i> Trang Quản Trị
                                            </a>
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                    }
                                    else if (role == "Store" || role == "Cửa Hàng")
                                    {
                                        <li>
                                            <a class="dropdown-item text-primary fw-bold" asp-area="Store" asp-controller="Home"
                                                asp-action="Index">
                                                <i class="fa-solid fa-store"></i> Quản Lý Cửa Hàng
                                            </a>
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-area="Customer" asp-controller="DonHang"
                                                asp-action="Index">
                                                <i class="fa-solid fa-receipt"></i> Đơn hàng của tôi
                                            </a>
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                    }
                                    else
                                    {<li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account"
                                            asp-action="ChangePassword">
                                            <i class="fa-solid fa-lock me-2"></i> Đổi mật khẩu
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    }

                                    <li>
                                        <form class="d-inline" asp-area="" asp-controller="Account" asp-action="Logout"
                                            method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Đăng
                                    nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-success btn-sm text-white ms-2 fw-bold px-3" asp-area=""
                                    asp-controller="Account" asp-action="Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light border-top mt-auto pt-5 pb-3">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="text-success fw-bold mb-3">BÁCH HÓA XANH</h5>
                    <p class="small text-muted">
                        Hệ thống bán lẻ thực phẩm tươi sống, giá rẻ, giao hàng nhanh chóng tận nơi. Cam kết chất lượng
                        100%.
                    </p>
                    <div class="social-icons">
                        <a href="#" class="me-2"><i class="fa-brands fa-facebook fa-lg text-primary"></i></a>
                        <a href="#" class="me-2"><i class="fa-brands fa-youtube fa-lg text-danger"></i></a>
                        <a href="#"><i class="fa-brands fa-tiktok fa-lg text-dark"></i></a>
                    </div>
                </div>

                <div class="col-md-2 col-6 mb-3">
                    <h6 class="fw-bold mb-3">Về chúng tôi</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a asp-action="About">Giới thiệu</a></li>
                        <li class="mb-2"><a href="#">Tuyển dụng</a></li>
                        <li class="mb-2"><a asp-action="Privacy">Chính sách bảo mật</a></li>
                    </ul>
                </div>

                <div class="col-md-2 col-6 mb-3">
                    <h6 class="fw-bold mb-3">Hỗ trợ khách hàng</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a href="#">Hướng dẫn mua hàng</a></li>
                        <li class="mb-2"><a href="#">Chính sách đổi trả</a></li>
                        <li class="mb-2"><a asp-action="Contact">Liên hệ</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold mb-3">Tổng đài hỗ trợ (Miễn phí)</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2">Gọi mua: <strong class="text-success">1900.1908</strong> (7:30 - 21:00)</li>
                        <li class="mb-2">Khiếu nại: <strong class="text-success">1900.1909</strong> (8:00 - 21:30)</li>
                        <li>Email: <a href="mailto:cskh@bachhoaxanh.com">cskh@bachhoaxanh.com</a></li>
                    </ul>
                </div>
            </div>
            <div class="text-center border-top pt-3 mt-3 small text-muted">
                &copy; 2025 - Công Ty Cổ Phần Bách Hóa Xanh - <a asp-area="" asp-controller="Home"
                    asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>