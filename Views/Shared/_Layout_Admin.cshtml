@using System.Security.Claims
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Trị Hệ Thống</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            overflow-x: hidden;
            background-color: #f4f6f9;
        }

        #wrapper {
            display: flex;
        }

        /* Sidebar */
        #sidebar-wrapper {
            min-height: 100vh;
            width: 260px;
            margin-left: 0;
            background-color: #212529;
            /* Dark Theme */
            transition: margin .25s ease-out;
        }

        #sidebar-wrapper .sidebar-heading {
            padding: 1.2rem 1.5rem;
            font-size: 1.3rem;
            color: #fff;
            background-color: #008848;
            /* Xanh BHX */
            font-weight: 800;
            text-align: center;
            letter-spacing: 1px;
        }

        #sidebar-wrapper .list-group {
            width: 260px;
        }

        #sidebar-wrapper .list-group-item {
            background-color: #212529;
            color: #adb5bd;
            border: none;
            padding: 0.9rem 1.5rem;
            font-weight: 500;
            transition: 0.2s;
        }

        #sidebar-wrapper .list-group-item:hover {
            background-color: #343a40;
            color: #fff;
            padding-left: 1.8rem;
            /* Hiệu ứng trượt nhẹ */
        }

        #sidebar-wrapper .list-group-item.active {
            background-color: #008848;
            color: #fff;
            border-left: 4px solid #fff;
        }

        /* Page Content */
        #page-content-wrapper {
            width: 100%;
        }

        .navbar {
            padding: 12px 20px;
            background: white;
            box-shadow: 0 2px 4px rgba(0, 0, 0, .05);
        }

        /* Toast Notification */
        .alert-floating {
            position: fixed;
            top: 80px;
            right: 20px;
            z-index: 9999;
            min-width: 320px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            animation: slideIn 0.5s forwards;
        }

        @@keyframes slideIn {
            from {
                right: -400px;
            }

            to {
                right: 20px;
            }
        }
    </style>
</head>

<body>
    <div class="d-flex" id="wrapper">

        <div class="border-end" id="sidebar-wrapper">
            <div class="sidebar-heading"><i class="fa-solid fa-leaf me-2"></i> ADMIN BHX</div>
            <div class="list-group list-group-flush mt-3">

                <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                    class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-gauge-high me-3"></i> Tổng Quan
                </a>

                <div class="text-secondary small text-uppercase fw-bold px-4 mt-3 mb-2" style="font-size: 0.75rem;">Quản
                    lý Kho & Hàng</div>

                <a asp-area="Admin" asp-controller="KhoTong" asp-action="Index"
                    class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-warehouse me-3"></i> Kho Tổng
                </a>
                <a asp-area="Admin" asp-controller="PhieuNhap" asp-action="Index"
                    class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-truck-ramp-box me-3"></i> Nhập Hàng NCC
                </a>
                <a asp-area="Admin" asp-controller="PhanPhoi" asp-action="Index"
                    class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-dolly me-3"></i> Phân Phối Store
                </a>
                <a asp-area="Admin" asp-controller="DeXuatAdmin" asp-action="Index"
                    class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-envelope-open-text me-3"></i> Duyệt Yêu Cầu
                </a>

                <div class="text-secondary small text-uppercase fw-bold px-4 mt-3 mb-2" style="font-size: 0.75rem;">Hệ
                    Thống</div>

                <a asp-area="Admin" asp-controller="TonKhoCuaHang" asp-action="Index"
                    class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-boxes-stacked me-3"></i> Giám Sát Kho CN
                </a>
                <a asp-area="Admin" asp-controller="CuaHang" asp-action="Index"
                    class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-store me-3"></i> DS Cửa Hàng
                </a>
                <a asp-area="Admin" asp-controller="HangTraVe" asp-action="Index"
                    class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-rotate-left me-3"></i> Hàng Trả Về
                </a>
                <a asp-area="Admin" asp-controller="ThongKe" asp-action="Index"
                    class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-chart-pie me-3"></i> Báo Cáo Thống Kê
                </a>
            </div>
        </div>

        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
                <div class="container-fluid">
                    <button class="btn btn-light border" id="sidebarToggle">
                        <i class="fa-solid fa-bars"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                var fullName = User.FindFirst(ClaimTypes.GivenName)?.Value ?? User.Identity.Name;

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle fw-bold text-dark d-flex align-items-center" href="#"
                                        id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                        <div class="rounded-circle bg-success text-white d-flex justify-content-center align-items-center me-2"
                                            style="width: 35px; height: 35px;">
                                            <i class="fa-solid fa-user-shield"></i>
                                        </div>
                                        <span>@fullName</span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end shadow border-0 mt-2 p-2"
                                        style="min-width: 200px;">
                                        <h6 class="dropdown-header text-uppercase small fw-bold">Tài khoản Admin</h6>
                                        <a class="dropdown-item rounded" href="#"><i
                                                class="fa-solid fa-id-card me-2 text-muted"></i> Hồ sơ</a>
                                        <a class="dropdown-item rounded" href="#"><i
                                                class="fa-solid fa-gear me-2 text-muted"></i> Cài đặt</a>
                                        <div class="dropdown-divider"></div>
                                        <form class="p-0" asp-area="" asp-controller="Account" asp-action="Logout"
                                            method="post">
                                            <button type="submit" class="dropdown-item text-danger fw-bold rounded">
                                                <i class="fa-solid fa-right-from-bracket me-2"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show alert-floating" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-circle-check fs-3 me-3"></i>
                            <div>
                                <strong>Thành công!</strong><br>
                                @TempData["SuccessMessage"]
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show alert-floating" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-circle-exclamation fs-3 me-3"></i>
                            <div>
                                <strong>Đã xảy ra lỗi!</strong><br>
                                @TempData["ErrorMessage"]
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>

            <footer class="text-center py-3 text-muted border-top bg-white mt-auto">
                <small>&copy; 2025 - Hệ thống quản lý Bách Hóa Xanh - Phiên bản Admin</small>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        window.addEventListener('DOMContentLoaded', event => {
            // Toggle Sidebar
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                    const sidebar = document.getElementById('sidebar-wrapper');
                    if (sidebar.style.marginLeft === '-260px') {
                        sidebar.style.marginLeft = '0';
                    } else {
                        sidebar.style.marginLeft = '-260px';
                    }
                });
            }

            // Auto hide alert after 5s
            setTimeout(function () {
                $('.alert-floating').fadeOut('slow');
            }, 5000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>