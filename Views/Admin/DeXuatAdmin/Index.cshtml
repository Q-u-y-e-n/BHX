@model IEnumerable<BHX_Web.Models.Entities.DeXuatNhapHang>

@{
    ViewData["Title"] = "Quản lý Đề Xuất";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-primary fw-bold"><i class="fa-solid fa-envelope-open-text"></i> Tiếp Nhận Yêu Cầu Nhập Hàng
    </h2>

    <div class="my-3">
        <a asp-action="Index" asp-route-status="Chờ duyệt"
            class="btn btn-outline-warning @(ViewBag.CurrentStatus == "Chờ duyệt" ? "active" : "")">
            Chờ Duyệt
        </a>
        <a asp-action="Index" asp-route-status="Đã duyệt"
            class="btn btn-outline-success @(ViewBag.CurrentStatus == "Đã duyệt" ? "active" : "")">
            Đã Duyệt
        </a>
        <a asp-action="Index" asp-route-status="Từ chối"
            class="btn btn-outline-danger @(ViewBag.CurrentStatus == "Từ chối" ? "active" : "")">
            Từ Chối
        </a>
        <a asp-action="Index" asp-route-status="All"
            class="btn btn-outline-secondary @(ViewBag.CurrentStatus == "All" ? "active" : "")">
            Tất cả
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Mã Phiếu</th>
                        <th>Cửa Hàng Gửi</th>
                        <th>Ngày Gửi</th>
                        <th>Trạng Thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.DeXuatID</td>
                                <td class="fw-bold text-primary">@item.CuaHang?.TenCuaHang</td>
                                <td>@item.NgayDeXuat.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (item.TrangThai == "Chờ duyệt")
                                    {
                                        <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                    }
                                    else if (item.TrangThai == "Đã duyệt")
                                    {
                                        <span class="badge bg-success">Đã duyệt</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Đã từ chối</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.DeXuatID"
                                        class="btn btn-sm btn-primary shadow-sm">
                                        <i class="fa-solid fa-magnifying-glass"></i> Xem & Duyệt
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">Không có dữ liệu.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>