@model IEnumerable<BHX_Web.Models.Entities.DanhSachTraHang>

@{
    ViewData["Title"] = "Xử lý hàng trả về";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-danger fw-bold"><i class="fa-solid fa-triangle-exclamation"></i> Xử Lý Hàng Hết Hạn & Trả Về
    </h2>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card bg-danger text-white shadow mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="h6">Tổng Giá Trị Thiệt Hại (Đã Hủy)</div>
                            <div class="h3 fw-bold">@string.Format("{0:N0} đ", ViewBag.TotalDamage)</div>
                        </div>
                        <i class="fa-solid fa-money-bill-trend-up fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <a asp-action="Index" asp-route-status="Chờ duyệt"
            class="btn btn-outline-warning @(ViewBag.CurrentStatus == "Chờ duyệt" ? "active" : "")">Chờ Xử Lý</a>
        <a asp-action="Index" asp-route-status="Đã nhận"
            class="btn btn-outline-success @(ViewBag.CurrentStatus == "Đã nhận" ? "active" : "")">Đã Nhận Kho</a>
        <a asp-action="Index" asp-route-status="Đã hủy"
            class="btn btn-outline-danger @(ViewBag.CurrentStatus == "Đã hủy" ? "active" : "")">Đã Tiêu Hủy</a>
        <a asp-action="Index" asp-route-status="All"
            class="btn btn-outline-secondary @(ViewBag.CurrentStatus == "All" ? "active" : "")">Tất cả</a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Mã Phiếu</th>
                        <th>Cửa Hàng Trả</th>
                        <th>Ngày Trả</th>
                        <th>Lý Do (Sơ bộ)</th>
                        <th>Trạng Thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.TraHangID</td>
                                <td class="text-primary fw-bold">@item.CuaHang?.TenCuaHang</td>
                                <td>@item.NgayTra.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <small class="text-muted">
                                        @(item.ChiTietTraHangs?.FirstOrDefault()?.LyDo ?? "Không có lý do") ...
                                    </small>
                                </td>
                                <td>
                                    @if (item.TrangThai == "Chờ duyệt")
                                    {
                                        <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                    }
                                    else if (item.TrangThai == "Đã hủy")
                                    {
                                        <span class="badge bg-danger">Đã tiêu hủy</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Đã nhập kho lỗi</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.TraHangID" class="btn btn-sm btn-primary">
                                        <i class="fa-solid fa-gavel"></i> Xử lý
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">Không có dữ liệu.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>