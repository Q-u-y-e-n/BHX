@model IEnumerable<BHX_Web.Models.Entities.KhoTong>


@{
    ViewData["Title"] = "Quản lý Kho Tổng";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 fw-bold text-primary"><i class="fa-solid fa-warehouse"></i> Quản Lý Kho Tổng Công Ty</h2>

    <div class="card mb-4 shadow-sm mt-3">
        <div class="card-body d-flex justify-content-between align-items-center">
            <form asp-action="Index" method="get" class="d-flex input-group w-50">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm sản phẩm..."
                    value="@ViewData["CurrentFilter"]">
                <button class="btn btn-primary" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
            <a asp-controller="PhieuNhap" asp-action="Create" class="btn btn-success">
                <i class="fa-solid fa-plus"></i> Nhập Hàng Mới
            </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">Ảnh</th>
                            <th>Sản Phẩm</th>
                            <th>Loại</th>
                            <th class="text-end">Giá Nhập</th>
                            <th class="text-center">Tồn Kho</th>
                            <th>Ngày Cập Nhật</th>
                            <th class="text-end">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center" style="width: 80px;">
                                        @if (!string.IsNullOrEmpty(item.SanPham?.HinhAnh))
                                        {
                                            <img src="@item.SanPham.HinhAnh" alt="SP" class="rounded border"
                                                style="width: 50px; height: 50px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted"
                                                style="width: 50px; height: 50px; font-size: 20px;">
                                                <i class="fa-solid fa-image"></i>
                                            </div>
                                        }
                                    </td>

                                    <td>
                                        <div class="fw-bold text-primary">@item.SanPham?.TenSanPham</div>
                                        <small class="text-muted">ĐVT: @item.SanPham?.DonViTinh</small>
                                    </td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(item.SanPham?.LoaiSanPham))
                                        {
                                            <span class="badge bg-info text-dark">@item.SanPham.LoaiSanPham</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">--</span>
                                        }
                                    </td>

                                    <td class="text-end">@string.Format("{0:N0} đ", item.SanPham?.GiaNhap)</td>

                                    <td class="text-center">
                                        @if (item.SoLuong <= 10)
                                        {
                                            <span class="badge bg-danger rounded-pill px-3">@item.SoLuong</span>
                                            <div class="text-danger x-small fw-bold">Sắp hết</div>
                                        }
                                        else if (item.SoLuong <= 50)
                                        {
                                            <span class="badge bg-warning text-dark rounded-pill px-3">@item.SoLuong</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success rounded-pill px-3">@item.SoLuong</span>
                                        }
                                    </td>

                                    <td class="small text-muted">@item.NgayCapNhat.ToString("dd/MM/yyyy HH:mm")</td>

                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.KhoTongID"
                                            class="btn btn-sm btn-outline-primary" title="Sửa tồn kho">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.KhoTongID" method="post" class="d-inline"
                                            onsubmit="return confirm('Xóa khỏi kho?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa"><i
                                                    class="fa-solid fa-trash"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">Không có dữ liệu.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>