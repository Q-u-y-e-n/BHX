@model BHX_Web.Models.Entities.PhieuNhap_Tong

@{
    ViewData["Title"] = "Chi Tiết Phiếu Nhập";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <div>
            <h2 class="text-primary fw-bold mb-0"><i class="fa-solid fa-file-invoice"></i> Chi Tiết Phiếu Nhập</h2>
            <span class="text-muted">Mã phiếu: #@Model.PhieuNhapID</span>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
            <button onclick="window.print()" class="btn btn-warning text-dark"><i class="fa-solid fa-print"></i> In
                Phiếu</button>
        </div>
    </div>

    <div class="card shadow mb-4" id="printableArea">
        <div class="card-header bg-white border-bottom py-3">
            <div class="row">
                <div class="col-sm-6">
                    <h5 class="text-success fw-bold text-uppercase">Thông Tin Nhà Cung Cấp</h5>
                    <div class="mt-2">
                        <strong>Tên NCC:</strong> @Model.NhaCungCap?.TenNCC <br />
                        <strong>Địa chỉ:</strong> @(Model.NhaCungCap?.DiaChi ?? "Không có địa chỉ") <br />
                        <strong>SĐT:</strong> @(Model.NhaCungCap?.SoDienThoai ?? "--")
                    </div>
                </div>
                <div class="col-sm-6 text-sm-end">
                    <h5 class="text-primary fw-bold text-uppercase">Thông Tin Nhập Kho</h5>
                    <div class="mt-2">
                        <strong>Ngày nhập:</strong> @Model.NgayNhap.ToString("dd/MM/yyyy HH:mm") <br />
                        <strong>Người lập:</strong> Admin (Hệ thống) <br />
                        <strong>Trạng thái:</strong> <span class="badge bg-success">Đã nhập kho</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped mb-0 align-middle">
                    <thead class="bg-light text-dark">
                        <tr>
                            <th class="ps-4">#</th>
                            <th>Sản Phẩm</th>
                            <th class="text-center">ĐVT</th>
                            <th class="text-center">Số Lượng</th>
                            <th class="text-end">Đơn Giá</th>
                            <th class="text-end pe-4">Thành Tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ChiTietNhapTongs != null && Model.ChiTietNhapTongs.Any())
                        {
                            int stt = 1;
                            foreach (var item in Model.ChiTietNhapTongs)
                            {
                                <tr>
                                    <td class="ps-4">@stt</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.SanPham?.HinhAnh))
                                            {
                                                <img src="@item.SanPham.HinhAnh" alt="img" class="rounded border me-2"
                                                    style="width: 40px; height: 40px; object-fit: cover;"
                                                    onerror="this.src='/images/no-image.png'" />
                                            }
                                            <div>
                                                <span class="fw-bold text-primary">@item.SanPham?.TenSanPham</span>
                                                <br />
                                                <small class="text-muted">Mã SP: @item.SanPhamID</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">@item.SanPham?.DonViTinh</td>
                                    <td class="text-center fw-bold">@item.SoLuong</td>
                                    <td class="text-end">@string.Format("{0:N0}", item.DonGia)</td>
                                    <td class="text-end fw-bold pe-4">
                                        @string.Format("{0:N0}", item.SoLuong * item.DonGia)
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-3">Không có dữ liệu chi tiết.</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-light">
                        <tr>
                            <td colspan="5" class="text-end fw-bold fs-5 pt-3">TỔNG CỘNG:</td>
                            <td class="text-end fw-bold fs-4 text-danger pe-4 pt-3">
                                @string.Format("{0:N0} đ", Model.TongTien)
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white text-muted small py-3">
            <div class="row">
                <div class="col-6">
                    * Phiếu nhập này đã được ghi nhận vào hệ thống kho.
                </div>
                <div class="col-6 text-end">
                    Hệ thống quản lý Bách Hóa Xanh
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        body * {
            visibility: hidden;
        }

        #printableArea,
        #printableArea * {
            visibility: visible;
        }

        #printableArea {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        .btn {
            display: none;
        }

        /* Ẩn nút khi in */
    }
</style>