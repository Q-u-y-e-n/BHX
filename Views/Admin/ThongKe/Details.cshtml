@model IEnumerable<BHX_Web.Models.Entities.BanHang_TongHop>

@{
    ViewData["Title"] = "Chi Tiết Doanh Thu Cửa Hàng";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    var chiTietLoi = ViewBag.ChiTietLoi as IEnumerable<dynamic>;
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <div>
            <h4 class="text-muted mb-0">Báo Cáo Tháng @ViewBag.Thang/@ViewBag.Nam</h4>
            <h2 class="text-primary fw-bold">@ViewBag.CuaHang.TenCuaHang</h2>
        </div>
        <a asp-action="Index" asp-route-thang="@ViewBag.Thang" asp-route-nam="@ViewBag.Nam" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Quay lại tổng hợp
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white d-flex justify-content-between">
                    <span class="fw-bold"><i class="fa-solid fa-cart-shopping"></i> CHI TIẾT BÁN HÀNG</span>
                    <span class="fw-bold">Tổng Thu: @string.Format("{0:N0} đ", ViewBag.TongDoanhThu)</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 500px;">
                        <table class="table table-striped mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>Sản Phẩm</th>
                                    <th class="text-center">SL Bán</th>
                                    <th class="text-end pe-3">Doanh Thu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.SanPham?.TenSanPham</td>
                                            <td class="text-center fw-bold">@string.Format("{0:N0}", item.SoLuongBan)</td>
                                            <td class="text-end pe-3 text-success fw-bold">@string.Format("{0:N0}",
                                                                                        item.DoanhThu)</td>
                                </tr>
                                                                }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-3 text-muted">Không có dữ liệu bán hàng.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-danger mb-4">
                <div class="card-header bg-danger text-white d-flex justify-content-between">
                    <span class="fw-bold"><i class="fa-solid fa-triangle-exclamation"></i> HÀNG HỦY / THẤT THOÁT</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 500px;">
                        <table class="table table-hover mb-0 small">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>Sản Phẩm</th>
                                    <th class="text-center">SL</th>
                                    <th class="text-end">Giá Trị</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (chiTietLoi != null && chiTietLoi.Any())
                                {
                                    foreach (var item in chiTietLoi)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.TenSP</strong><br />
                                                <span class="text-muted fst-italic">(@item.LyDo)</span>
                                            </td>
                                            <td class="text-center text-danger fw-bold">@item.SoLuong</td>
                                            <td class="text-end fw-bold">@string.Format("{0:N0}", item.GiaTri)</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-3 text-muted">Không có hàng hủy.</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-light text-danger fw-bold">
                                <tr>
                                    <td colspan="2" class="text-end">Tổng Mất:</td>
                                    <td class="text-end">@string.Format("{0:N0}", ViewBag.TongThatThoat)</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>