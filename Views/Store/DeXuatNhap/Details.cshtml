@model BHX_Web.Models.Entities.DeXuatNhapHang

@{
    ViewData["Title"] = "Chi tiết đề xuất";
    Layout = "~/Views/Shared/_Layout_Store.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="text-info fw-bold">Chi Tiết Đề Xuất #@Model.DeXuatID</h2>
        <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-white py-3">
            <div class="row">
                <div class="col-md-6">
                    <strong>Ngày Gửi:</strong> @Model.NgayDeXuat.ToString("dd/MM/yyyy HH:mm")
                </div>
                <div class="col-md-6 text-end">
                    <strong>Trạng Thái:</strong>
                    <span class="badge bg-warning text-dark">@Model.TrangThai</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Sản Phẩm</th>
                        <th class="text-center">Số Lượng Yêu Cầu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ChiTietDeXuatNhaps)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-primary">@item.SanPham?.TenSanPham</td>
                            <td class="text-center fw-bold">@item.SoLuong</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>