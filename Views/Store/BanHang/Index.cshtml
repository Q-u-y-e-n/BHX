@model List<BHX_Web.ViewModels.GioHangItem>
@{
    Layout = "~/Views/Shared/_Layout_Store.cshtml"; var products = ViewBag.Products as IEnumerable<dynamic>;
}

<div class="container-fluid px-4 mt-3">
    <div class="row">
        <div class="col-md-7">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white">
                    <form method="get" class="input-group">
                        <input type="text" name="searchString" class="form-control"
                            placeholder="Quét mã hoặc nhập tên SP..." autofocus>
                        <button class="btn btn-primary"><i class="fa-solid fa-search"></i></button>
                    </form>
                </div>
                <div class="card-body overflow-auto" style="height: 70vh;">
                    <div class="row">
                        @if (products != null)
                        {
                            foreach (var item in products)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card h-100 border-0 shadow-sm text-center">
                                        <img src="@(item.SanPham.HinhAnh ?? "/images/no-image.png")" class="card-img-top"
                                            style="height: 100px; object-fit: contain;">
                                        <div class="card-body p-2">
                                            <h6 class="card-title small fw-bold">@item.SanPham.TenSanPham</h6>
                                            <div class="text-danger fw-bold">@string.Format("{0:N0} đ", item.SanPham.GiaBan)
                                            </div>
                                            <small class="text-muted">Tồn: @item.SoLuong</small>
                                            <a asp-action="AddToBill" asp-route-id="@item.SanPhamID"
                                                class="btn btn-sm btn-success w-100 mt-2"><i class="fa-solid fa-plus"></i>
                                                Thêm</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow h-100">
                <div class="card-header bg-success text-white fw-bold"><i class="fa-solid fa-receipt"></i> HÓA ĐƠN BÁN
                    HÀNG</div>
                <div class="card-body p-0 overflow-auto" style="height: 50vh;">
                    <table class="table table-striped mb-0 small">
                        <thead class="table-light">
                            <tr>
                                <th>SP</th>
                                <th>SL</th>
                                <th>Đơn Giá</th>
                                <th>Thành Tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TenSanPham</td>
                                    <td>@item.SoLuong</td>
                                    <td>@string.Format("{0:N0}", item.DonGia)</td>
                                    <td class="fw-bold">@string.Format("{0:N0}", item.ThanhTien)</td>
                                    <td><a asp-action="RemoveFromBill" asp-route-id="@item.SanPhamID" class="text-danger"><i
                                                class="fa-solid fa-times"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-white">
                    <h4 class="d-flex justify-content-between fw-bold">
                        <span>Tổng cộng:</span> <span class="text-danger">@string.Format("{0:N0} đ", Model.Sum(x =>
                                                        x.ThanhTien))</span>
                    </h4>
                    <form asp-action="Checkout" method="post" class="mt-3">
                        <div class="mb-2"><input name="SoDienThoai" class="form-control form-control-sm"
                                placeholder="SĐT Khách (Tích điểm)" /></div>
                        <div class="mb-2"><input name="TenKhachHang" class="form-control form-control-sm"
                                placeholder="Tên Khách Hàng" /></div>
                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold text-uppercase">THANH TOÁN
                            (F9)</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>