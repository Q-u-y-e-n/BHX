@model IEnumerable<BHX_Web.Models.Entities.DonHang>

@{
    ViewData["Title"] = "Quản lý đơn hàng online";
    Layout = "~/Views/Shared/_Layout_Store.cshtml"; // Dùng Layout của Store
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-primary fw-bold"><i class="fa-solid fa-earth-americas"></i> Đơn Hàng Online</h2>
    <p class="text-muted">Danh sách đơn hàng khách đặt qua Website.</p>

    <div class="card shadow mt-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-success text-white">
                    <tr>
                        <th class="ps-4">Mã Đơn</th>
                        <th>Khách Hàng</th>
                        <th>Ngày Đặt</th>
                        <th>Trạng Thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-secondary">#@item.DonHangID</td>
                                <td>
                                    <span class="fw-bold text-dark">@item.KhachHang?.TenKhachHang</span><br />
                                    <small class="text-muted"><i class="fa-solid fa-phone"></i>
                                        @item.KhachHang?.SoDienThoai</small>
                                </td>
                                <td>@item.NgayDat.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (item.TrangThai == "Chờ xác nhận")
                                    {
                                        <span class="badge bg-danger border border-danger animate-pulse">Mới - Cần xử lý</span>
                                    }
                                    else if (item.TrangThai == "Đang giao")
                                    {
                                        <span class="badge bg-warning text-dark">Đang giao hàng</span>
                                    }
                                    else if (item.TrangThai == "Hoàn thành")
                                    {
                                        <span class="badge bg-success">Hoàn thành</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.TrangThai</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.DonHangID"
                                        class="btn btn-sm btn-primary shadow-sm">
                                        <i class="fa-solid fa-box-open"></i> Xử lý đơn
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-cart-arrow-down fa-3x mb-3 opacity-50"></i><br />
                                Chưa có đơn hàng nào mới.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Hiệu ứng nhấp nháy cho đơn mới */
    .animate-pulse {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }

        100% {
            opacity: 1;
        }
    }
</style>