@model IEnumerable<BHX_Web.Models.Entities.TonKho_CuaHang>

@{
    ViewData["Title"] = "Kho Cửa Hàng";
    Layout = "~/Views/Shared/_Layout_Store.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-primary fw-bold"><i class="fa-solid fa-boxes-stacked"></i> Quản Lý Kho Tại Cửa Hàng</h2>

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="btn-group shadow-sm w-100">
                <a asp-action="Index" class="btn btn-outline-primary active">Tất cả</a>
                <a asp-action="Index" asp-route-filterType="low" class="btn btn-outline-warning fw-bold">
                    <i class="fa-solid fa-triangle-exclamation"></i> Hàng Sắp Hết (< 10) </a>
                        <a asp-action="Index" asp-route-filterType="out" class="btn btn-outline-danger fw-bold">
                            <i class="fa-solid fa-circle-xmark"></i> Đã Hết Hàng (0)
                        </a>
            </div>
        </div>
    </div>

    <div class="card shadow mt-3 mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <form asp-action="Index" method="get" class="d-flex input-group w-50">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm tên sản phẩm..."
                    value="@ViewData["CurrentFilter"]">
                <button class="btn btn-primary" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>

            @if (ViewData["FilterStatus"] != null)
            {
                <span class="badge bg-danger fs-6">@ViewData["FilterStatus"]</span>
            }
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="bg-success text-white">
                        <tr>
                            <th class="text-center">Ảnh</th>
                            <th>Tên Sản Phẩm</th>
                            <th>Đơn Vị</th>
                            <th class="text-center">Tồn Kho</th>
                            <th>Trạng Thái</th>
                            <th class="text-end">Đề Xuất</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center" style="width: 80px;">
                                        @if (!string.IsNullOrEmpty(item.SanPham?.HinhAnh))
                                        {
                                            <img src="@item.SanPham.HinhAnh" class="rounded border"
                                                style="width: 50px; height: 50px; object-fit: cover;"
                                                onerror="this.src='/images/no-image.png'" />
                                        }
                                        else
                                        {
                                            <i class="fa-solid fa-image fa-2x text-muted"></i>
                                        }
                                    </td>

                                    <td>
                                        <span class="fw-bold text-dark">@item.SanPham?.TenSanPham</span>
                                        <div class="small text-muted">Loại: @item.SanPham?.LoaiSanPham</div>
                                    </td>

                                    <td>@item.SanPham?.DonViTinh</td>

                                    <td class="text-center">
                                        @if (item.SoLuong == 0)
                                        {
                                            <span class="badge bg-danger fs-6 px-3">0</span>
                                        }
                                        else if (item.SoLuong <= 10)
                                        {
                                            <span class="badge bg-warning text-dark fs-6 px-3">@item.SoLuong</span>
                                        }
                                        else
                                        {
                                            <span class="fw-bold fs-5 text-primary">@item.SoLuong</span>
                                        }
                                    </td>

                                    <td>
                                        @if (item.SoLuong == 0)
                                        {
                                            <span class="text-danger fw-bold"><i class="fa-solid fa-circle-exclamation"></i> Hết
                                                hàng</span>
                                        }
                                        else if (item.SoLuong <= 10)
                                        {
                                            <span class="text-warning fw-bold text-dark"><i
                                                    class="fa-solid fa-triangle-exclamation"></i> Cần nhập</span>
                                        }
                                        else
                                        {
                                            <span class="text-success"><i class="fa-solid fa-check"></i> Ổn định</span>
                                        }
                                    </td>

                                    <td class="text-end">
                                        @if (item.SoLuong <= 20) // Chỉ hiện nút nhập nếu hàng ít
                                        {
                                            <a href="#" class="btn btn-sm btn-outline-primary" title="Lập phiếu đề xuất nhập">
                                                <i class="fa-solid fa-file-pen"></i> Đề xuất nhập
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="fa-solid fa-box-open fa-3x mb-3"></i><br />
                                    Kho cửa hàng hiện đang trống.<br />
                                    Hãy thực hiện chức năng "Nhập hàng từ TCT" để có dữ liệu.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>