@model IEnumerable<BHX_Web.Models.Entities.TonKho_CuaHang>

@{
    ViewData["Title"] = "Quản lý kho cửa hàng";
    Layout = "~/Views/Shared/_Layout_Store.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-primary fw-bold"><i class="fa-solid fa-boxes-stacked"></i> Quản Lý Kho Tại Cửa Hàng</h2>

    <div class="card shadow mt-3">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <form asp-action="Index" method="get" class="d-flex" style="max-width: 400px;">
                <input type="text" name="searchString" class="form-control me-2" placeholder="Tìm tên sản phẩm..."
                    value="@ViewData["CurrentFilter"]">
                <button class="btn btn-outline-primary" type="submit"><i
                        class="fa-solid fa-magnifying-glass"></i></button>
            </form>

            <form asp-action="BaoCaoTonKho" method="post">
                <button type="submit" class="btn btn-warning text-dark fw-bold shadow-sm"
                    onclick="return confirm('Xác nhận gửi báo cáo tồn kho hiện tại về Tổng công ty?');">
                    <i class="fa-solid fa-paper-plane"></i> Báo cáo tồn kho
                </button>
            </form>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Sản Phẩm</th>
                            <th>Đơn Vị</th>
                            <th class="text-center">Tồn Kho</th>
                            <th>Trạng Thái</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.SanPham?.HinhAnh))
                                            {
                                                <img src="@item.SanPham.HinhAnh" class="rounded border me-2"
                                                    style="width: 50px; height: 50px; object-fit: cover;"
                                                    onerror="this.src='/images/no-image.png'" />
                                            }
                                            else
                                            {
                                                <div class="bg-secondary text-white rounded d-flex align-items-center justify-content-center me-2"
                                                    style="width: 50px; height: 50px;">
                                                    <i class="fa-solid fa-box"></i>
                                                </div>
                                            }
                                            <div>
                                                <span class="fw-bold text-dark">@item.SanPham?.TenSanPham</span><br />
                                                <small class="text-muted">Mã SP: @item.SanPhamID</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.SanPham?.DonViTinh</td>

                                    <td class="text-center">
                                        @if (item.SoLuong <= 0)
                                        {
                                            <span class="badge bg-danger fs-6">Hết hàng</span>
                                        }
                                        else if (item.SoLuong <= 10)
                                        {
                                            <span class="badge bg-warning text-dark fs-6">@item.SoLuong (Thấp)</span>
                                        }
                                        else
                                        {
                                            <span class="fw-bold fs-5 text-success">@item.SoLuong</span>
                                        }
                                    </td>

                                    <td>
                                        @if (item.SoLuong <= 10)
                                        {
                                            <span class="text-danger small"><i class="fa-solid fa-triangle-exclamation"></i> Cần
                                                nhập thêm</span>
                                        }
                                        else
                                        {
                                            <span class="text-success small"><i class="fa-solid fa-check-circle"></i> Ổn định</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        @if (item.SoLuong <= 20)
                                        {
                                            <a asp-controller="DeXuatNhap" asp-action="CreateManual"
                                                class="btn btn-sm btn-outline-primary">
                                                <i class="fa-solid fa-cart-plus"></i> Đề xuất nhập
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="fa-solid fa-box-open fa-3x mb-3 opacity-50"></i><br />
                                    Kho hàng hiện đang trống. <br />
                                    Vui lòng thực hiện chức năng "Nhập hàng từ TCT" hoặc "Đề xuất nhập".
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>