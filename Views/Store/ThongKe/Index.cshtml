@model BHX_Web.ViewModels.ThongKeViewModel

@{
    ViewData["Title"] = "Thống Kê Doanh Thu";
    Layout = "~/Views/Shared/_Layout_Store.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="text-primary fw-bold"><i class="fa-solid fa-chart-line"></i> Thống Kê Doanh Thu</h2>

        <form asp-action="Index" method="get" class="d-flex bg-white p-2 rounded shadow-sm">
            <div class="input-group">
                <span class="input-group-text fw-bold">Tháng</span>
                <input type="number" name="thang" value="@Model.Thang" class="form-control text-center" min="1" max="12"
                    style="width: 70px;">

                <span class="input-group-text fw-bold">Năm</span>
                <input type="number" name="nam" value="@Model.Nam" class="form-control text-center"
                    style="width: 90px;">

                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-filter"></i> Xem</button>
            </div>
        </form>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white shadow h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase small fw-bold">Tổng Doanh Thu</div>
                            <div class="h2 mb-0 fw-bold">@string.Format("{0:N0} đ", Model.TongDoanhThu)</div>
                        </div>
                        <i class="fa-solid fa-sack-dollar fa-3x opacity-50"></i>
                    </div>
                    <div class="mt-3 small">
                        <i class="fa-solid fa-receipt"></i> Tổng số đơn: <strong>@Model.TongDonHang</strong>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-danger text-white shadow h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase small fw-bold">Giá Trị Thất Thoát</div>
                            <div class="h2 mb-0 fw-bold">@string.Format("{0:N0} đ", Model.TongGiaTriTraHang)</div>
                        </div>
                        <i class="fa-solid fa-arrow-trend-down fa-3x opacity-50"></i>
                    </div>
                    <div class="mt-3 small">
                        * Tổng giá trị hàng hết hạn/hư hỏng đã trả về.
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-primary text-white shadow h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase small fw-bold">Lợi Nhuận Ước Tính</div>
                            <div class="h2 mb-0 fw-bold">
                                @string.Format("{0:N0} đ", Model.TongDoanhThu - Model.TongGiaTriTraHang)
                            </div>
                        </div>
                        <i class="fa-solid fa-piggy-bank fa-3x opacity-50"></i>
                    </div>
                    <div class="mt-3 small">
                        (Chưa trừ chi phí vận hành)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="m-0 fw-bold text-primary"><i class="fa-solid fa-list-ol"></i> Chi Tiết Sản Phẩm Bán Ra</h5>

            @if (Model.TongDoanhThu > 0)
            {
                <form asp-action="BaoCaoDoanhThu" method="post"
                    onsubmit="return confirm('Xác nhận chốt sổ và gửi báo cáo tháng @Model.Thang/@Model.Nam lên Tổng công ty?');">
                    <input type="hidden" name="thang" value="@Model.Thang" />
                    <input type="hidden" name="nam" value="@Model.Nam" />
                    <button type="submit" class="btn btn-warning text-dark fw-bold shadow-sm">
                        <i class="fa-solid fa-paper-plane"></i> Gửi Báo Cáo TCT
                    </button>
                </form>
            }
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">#</th>
                            <th>Tên Sản Phẩm</th>
                            <th class="text-center">Đơn Vị</th>
                            <th class="text-center">Số Lượng Bán</th>
                            <th class="text-end pe-4">Doanh Thu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.SanPhamBanChay != null && Model.SanPhamBanChay.Any())
                        {
                            int stt = 1;
                            foreach (var item in Model.SanPhamBanChay)
                            {
                                <tr>
                                    <td class="ps-4">@stt</td>
                                    <td class="fw-bold text-dark">@item.TenSanPham</td>
                                    <td class="text-center">@item.DonViTinh</td>
                                    <td class="text-center fw-bold text-primary">@string.Format("{0:N0}", item.SoLuongBan)</td>
                                    <td class="text-end pe-4 fw-bold text-success">@string.Format("{0:N0} đ", item.DoanhThu)
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4 text-muted">Không có dữ liệu bán hàng trong tháng
                                    này.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>