@model IEnumerable<BHX_Web.Models.Entities.PhieuPhanPhoi>

@{
    ViewData["Title"] = "Nhập Hàng Từ Tổng Công Ty";
    Layout = "~/Views/Shared/_Layout_Store.cshtml"; // Layout dành cho Cửa hàng
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-primary fw-bold"><i class="fa-solid fa-truck-fast"></i> Nhận Hàng Từ Tổng Công Ty</h2>

    <div class="card shadow mt-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-3">Mã Phiếu</th>
                        <th>Ngày Gửi</th>
                        <th>Trạng Thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-secondary ps-3">#@item.PhieuPhanPhoiID</td>
                                <td>@item.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (item.TrangThai == "Đang giao")
                                    {
                                        <span class="badge bg-warning text-dark border border-warning">
                                            <i class="fa-solid fa-spinner fa-spin"></i> Đang giao đến
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success border border-success">
                                            <i class="fa-solid fa-check-circle"></i> Đã nhận hàng
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.TrangThai == "Đang giao")
                                    {
                                        <a asp-action="Details" asp-route-id="@item.PhieuPhanPhoiID"
                                            class="btn btn-primary btn-sm shadow-sm">
                                            <i class="fa-solid fa-box-open"></i> Kiểm Tra & Nhận
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="Details" asp-route-id="@item.PhieuPhanPhoiID"
                                            class="btn btn-secondary btn-sm">
                                            <i class="fa-solid fa-eye"></i> Xem lại
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                Chưa có phiếu phân phối nào gửi đến cửa hàng bạn.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>