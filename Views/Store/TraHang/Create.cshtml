@model BHX_Web.ViewModels.TraHangViewModel

@{
    ViewData["Title"] = "Lập Phiếu Trả Hàng";
    Layout = "~/Views/Shared/_Layout_Store.cshtml";
    var listSanPhams = ViewBag.ListSanPham as IEnumerable<dynamic>;
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-danger fw-bold"><i class="fa-solid fa-rotate-left"></i> Lập Phiếu Trả Hàng Về Tổng Công Ty</h2>
    <div class="alert alert-warning mt-2 small">
        <i class="fa-solid fa-triangle-exclamation"></i> Lưu ý: Hàng sau khi lập phiếu trả sẽ bị <strong>trừ ngay lập
            tức</strong> khỏi kho bán hàng của cửa hàng.
    </div>

    <div class="card shadow mt-3 mb-5">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <table class="table table-bordered align-middle" id="tblChiTiet">
                    <thead class="table-danger text-center">
                        <tr>
                            <th style="width: 40%">Sản Phẩm (Tồn kho)</th>
                            <th style="width: 15%">Số Lượng Trả</th>
                            <th style="width: 35%">Lý Do Trả Hàng</th>
                            <th style="width: 10%">#</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <tr class="item-row">
                            <td>
                                <select name="ChiTiets[0].SanPhamID" class="form-select sp-select" required>
                                    <option value="">-- Chọn sản phẩm --</option>
                                    @if (listSanPhams != null)
                                    {
                                        foreach (var sp in listSanPhams)
                                        {
                                            <option value="@sp.SanPhamID" data-max="@sp.TonKho">@sp.TenHienThi</option>
                                        }
                                    }
                                </select>
                            </td>
                            <td>
                                <input type="number" name="ChiTiets[0].SoLuong"
                                    class="form-control text-center fw-bold txtSL" min="1" value="1" required />
                            </td>
                            <td>
                                <input type="text" name="ChiTiets[0].LyDo" class="form-control"
                                    placeholder="VD: Hết hạn sử dụng, Bao bì rách..." required />
                            </td>
                            <td class="text-center">
                                <button type="button" class="btn btn-outline-danger btn-sm btnRemove"><i
                                        class="fa-solid fa-trash"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="mb-4">
                    <button type="button" class="btn btn-outline-secondary" id="btnAddRow">
                        <i class="fa-solid fa-plus-circle"></i> Thêm dòng
                    </button>
                </div>

                <div class="d-flex justify-content-end border-top pt-3 gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                    <button type="submit" class="btn btn-danger btn-lg fw-bold shadow">
                        <i class="fa-solid fa-paper-plane"></i> Gửi Phiếu Trả
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const tableBody = document.getElementById('tableBody');
        const btnAddRow = document.getElementById('btnAddRow');
        let rowIndex = 1;

        // Kiểm tra số lượng không vượt quá tồn kho
        function attachValidation(row) {
            const select = row.querySelector('.sp-select');
            const input = row.querySelector('.txtSL');

            input.addEventListener('change', function () {
                const max = parseInt(select.options[select.selectedIndex].getAttribute('data-max')) || 0;
                if (parseInt(input.value) > max) {
                    alert('Số lượng trả không được vượt quá tồn kho (' + max + ')');
                    input.value = max;
                }
            });

            row.querySelector('.btnRemove').addEventListener('click', function () {
                if (tableBody.querySelectorAll('.item-row').length > 1) row.remove();
            });
        }

        attachValidation(tableBody.querySelector('.item-row'));

        btnAddRow.addEventListener('click', function () {
            const newRow = tableBody.querySelector('.item-row').cloneNode(true);
            newRow.querySelector('select').value = "";
            newRow.querySelector('input[type="number"]').value = 1;
            newRow.querySelector('input[type="text"]').value = "";

            newRow.querySelectorAll('[name]').forEach(el => {
                const name = el.getAttribute('name');
                el.setAttribute('name', name.replace(/\[\d+\]/, `[${rowIndex}]`));
            });

            attachValidation(newRow);
            tableBody.appendChild(newRow);
            rowIndex++;
        });
    });
</script>