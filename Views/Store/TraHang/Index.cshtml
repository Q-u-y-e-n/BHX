@model IEnumerable<BHX_Web.Models.Entities.DanhSachTraHang>

@{
    ViewData["Title"] = "Lịch sử trả hàng";
    Layout = "~/Views/Shared/_Layout_Store.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h2 class="text-primary fw-bold">Lịch Sử Trả Hàng</h2>
        <a asp-action="Create" class="btn btn-danger shadow-sm fw-bold">
            <i class="fa-solid fa-rotate-left"></i> Tạo Phiếu Trả Mới
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Mã Phiếu</th>
                        <th>Ngày Trả</th>
                        <th>Trạng Thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.TraHangID</td>
                                <td>@item.NgayTra.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (item.TrangThai == "Chờ duyệt")
                                    {
                                        <span class="badge bg-warning text-dark">Đã gửi - Chờ duyệt</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Tổng công ty đã nhận</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.TraHangID"
                                        class="btn btn-sm btn-info text-white">
                                        <i class="fa-solid fa-eye"></i> Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">Chưa có phiếu trả hàng nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>